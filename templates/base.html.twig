<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Malosse & CO {% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
        <link rel="stylesheet" href ="Main.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="icon" href="logocut.png" type ="image/png" >
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <div id="hd">
        <div id="bg">
          <!--<h1 class="Titre"><b>MALOSSE & CO</b></h1>-->
          <img class="Imagemoi"src="logo.png" alt="Moi" width="40%" height="auto">
          <div class="Barre">
            <div class="topnav" id="myTopnav">
              <a href="/" class="active">Accueil</a>
              <a href="/commande">Passer commande</a>
              <div class="gdropdown">
                <button class="gdropbtn">Colaboration 
                  <i class="fa fa-caret-down"></i>
                </button>
                <div class="gdropdown-content">
                  <a href="/contact">Entrez en contact avec nous</a>
                  <a href="/colab">Liste de nos colaborateurs</a>
                </div>
              </div>
              <div class="gdropdown">
                <button class="gdropbtn">Compte 
                  <i class="fa fa-caret-down"></i>
                </button>
                <div class="gdropdown-content">
                  <a href="/login">Connexion</a>
                  <a href="/register">S'inscrire</a>
                  <a href="/logout">Se déconnecter</a>
                  <a> {{ app.user.username }} <a>
                </div>
              </div>
              <a href="/ajout">Ajouter un service</a>
              
              <a href="javascript:void(0);" class="icon" onclick="myFunction()">
              <i class="fa fa-bars"></i>
              </a>
            </div>
          
            <div class="container">
              {% block body %}{% endblock %}
            </div>
            <p class ="Fin" ><a href="#" class="btn btn-default">Retour en haut ↑</a><br> © MALOSSE &CO 2022</p>
          </div>
        </div>
      </div>  
      <script>
        function myFunction() {
          var x = document.getElementById("myTopnav");
          if (x.className === "topnav") {
            x.className += " responsive";
          } else {
            x.className = "topnav";
          }
        }
        function checkBox() {
          var checkBox = document.getElementById("myCheck");
          var text = document.getElementById("text");
          var name = document.getElementById("name");
          var entname = document.getElementById("entname");
          var mail = document.getElementById("mail");
          var objet = document.getElementById("objet");
          if (checkBox.checked == true){
            if (name.value!="" && entname.value!="" && mail.value!="" && objet.value!=""){
              text.style.display = "block";
            }
            else{
              alert("Veuillez remplir les champs")
              checkBox.checked = false
            }
          } else {
            text.style.display = "none";
          }
        }
      </script>
    </body>
</html>