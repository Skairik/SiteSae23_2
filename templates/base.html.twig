<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Malosse Tom{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
        <link rel="stylesheet" href ="Main.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="icon" href="icon.png" type ="image/png" >
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <div id="hd">
        <div id="bg">
          <h1 class="Titre"><b>MALOSSE Tom</b></h1>
          <img class="Imagemoi"src="moi.jpg" alt="Moi" width="5%" height="auto">
          <div class="Barre">
            <div class="topnav" id="myTopnav">
              <a href="/" class="active">Accueil</a>
              <a href="/portfolio">Portfolio</a>
              <a href="/cv">CV</a>
              <a href="/contact">Contact</a>
              <a href="javascript:void(0);" class="icon" onclick="myFunction()">
              <i class="fa fa-bars"></i>
              </a>
            </div>
            <div class="container">
              {% block body %}{% endblock %}
            </div>
            <p class ="Fin" ><a href="#" class="btn btn-default">Retour en haut ↑</a><br> © MALOSSE Tom 2021</p>
          </div>
        </div>
      </div>  
      <script>
        function myFunction() {
          var x = document.getElementById("myTopnav");
          if (x.className === "topnav") {
            x.className += " responsive";
          } else {
            x.className = "topnav";
          }
        }
        function checkBox() {
          var checkBox = document.getElementById("myCheck");
          var text = document.getElementById("text");
          var mail = document.getElementById("mail");
          var name = document.getElementById("nom");
          if (checkBox.checked == true){
            if (mail.value!="" && name.value!=""){
              text.style.display = "block";
            }
            else{
              alert("Veuillez remplir les champs")
              checkBox.checked = false
            }
          } else {
            text.style.display = "none";
          }
        }
      </script>
    </body>
</html>